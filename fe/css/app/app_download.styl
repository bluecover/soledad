@import "../core/_global"
.app-download-page
  background-color: #fff

.app-download-wrapper
  min-width: 1200px
  max-width: 100%
  text-align: center
  @media $mobile
    min-width: 0
  >.bd
    height: 360px
    background-color: $blue_10
    @media $mobile
      height: 230px
    .wrapper
      max-width: 1100px
      margin: 0 auto
      @media $mobile
        max-width: 100%
  .app-logo.mobile-element
    display: inline-block
    padding-top: 60px
    margin-bottom: 55px
    @media $mobile
      padding-top: 40px
      margin-bottom: 30px
    .logo
      width: 106px
      height: 106px
      @media $mobile
        width: 60px
        height: 60px
  .phone-app-demo
    float: left
    margin-right: 50px
    padding-top: 80px
    width: 400px
    @media $mobile
      float: none
      display: block
      margin: 0 auto
      width: 170px
      padding: 0

  .app-desc-mod
    overflow: hidden
    text-align: center
    margin: 0 auto
    padding-top: 100px
    @media $mobile
      overflow: auto
      padding: 0
    >.hd
      margin-bottom: 35px
      .app-logo
        display: inline-block
      .logo
        display: block
        width: 106px
        height: 106px
    >.bd
      line-height: 1.5
      .title
        color: $gray_70
        font-size: 30px
        @media $mobile
          font-size: 24px
        strong
          font-weight: bold
          margin-right: 15px
      .sub-title
        font-size: 20px
        color: $blue_gray_40
        @media $mobile
          font-size: 16px

  >.ft
    margin-bottom: 100px
    @media $mobile
      margin-top: 180px
      margin-bottom: 0
    .wrapper
      max-width: 1100px
      margin: 0 auto
      padding-top: 80px

    .app-download-mod
      overflow: hidden
      @media $mobile
        overflow: auto
      >.hd
        float: left
        width: 235px
        margin: 0 0 0 130px
        @media $mobile
          float: none
          width: 100%
          text-align: center
          margin: 0 0 50px 0
        .btn
          width: 100%
          margin-bottom: 20px
          height: 50px
          line-height: 50px
          border-radius: 6px
          font-size: 20px
          text-align: left
          @media $mobile
            width: 197px
            margin-bottom: 20px
            height: 44px
            line-height: 44px
            border-radius: 4px
            font-size: 18px
            text-align: center
        .svgicon
          margin: 10px 10px 0 10px
          display: inline-block
          width: (25/30)*25px
          height: 25px
          vertical-align: top
          @media $mobile
            margin: 10px 0 0 0
            width: (30/25)*30px
            height: 22px
      >.bd
        overflow: hidden
        .qrcode-wrap
          display: inline-block
          width: 120px
          height: 122px
          margin-right: 50px
          border: 1px solid $gray_30
        .app-qrcode
          width: 120px
          height: 120px
          padding: 10px
          display: inline-block
          vertical-align: top
