.ins-header-wrapper
  background-color: $primary_color
  height: 50px
  text-align: left
  padding-left: 30px
  font-size: 0
  @media $mobile
    text-align: center
    padding-left: 0
    height: 40px
  .title
    display: inline
    color: #fff
    font-size: 22px
    line-height: 50px
    @media $mobile
      line-height: 40px
      font-size: 18px
  .logo
    display: inline-block
    height: 50px
    vertical-align: top
    @media $mobile
      height: 40px
    img
      display: inline-block
      height: 34px
      margin-top: 7px
      @media $mobile
        height: 28px
        margin-top: 5px
