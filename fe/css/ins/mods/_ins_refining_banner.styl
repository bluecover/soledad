.m-ins-refining-banner
  position: relative
  background-color: $green_50
  padding: 40px 18% 0
  margin-bottom: 15px
  height: 220px
  @media $mobile
    padding: 40px 40px 0
  > a
    position: absolute
    left: 0
    top: 0
    bottom: 0
    right: 0
    z-index: 1
  >.hd
    margin-left: 45%
    @media $mobile
      margin-left: 0
  >.bd
    margin-left: 45%
    @media $mobile
      margin-left: 0
  .title
    font-size: 30px
    font-weight: bold
    color: #fff
  .subtitle
    color: $green_80
    font-size: 20px
    margin: 14px 0 20px
    @media $mobile
      font-size: 24px
  .ins-desc-list
    color: #fff
    text-align: left
    opacity: .8
    @media $mobile
      color: $green_80
    li
      margin-bottom: 9px
    .iconfont
      margin-right: 5px
  .ft
    position: absolute
    left: 18%
    bottom: 15px
    @media $mobile
      right: 30px
      left: auto
      bottom: 0
    .svgicon
      display: inline-block
      width: 245px
      height: 184px
      vertical-align: top
