.m-plan-qrcode
  float: left
  width: 40%
  background: #fff
  padding: 37px 34px 37px 37px
  @media $mobile
    float: none
    width: 100%
    padding: 25px 4%
  >.hd
    float: left
    width: 106px
    height: 106px
    img
      width: 100%
      height: 100%
      display: block
  >.bd
    overflow: hidden
    padding-left: 10px
    .title
      margin: 14px 0 4px 0
      font-weight: bold
    .desc
      color: $gray_60
      line-height: 1.5
    .note
      margin-top: 10px
      font-size: 12px
      color: $gray_40
