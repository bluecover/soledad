@import '../mods/_badge.styl'

.product-info-mod
  float: left
  width: 49%
  margin-left: 2%
  padding: 9px 9px 29px
  &:first-child
    margin-left: 0
  @media $mobile
    width: 100%
    float: none
    margin-left: 0
  >.hd
    height: 266px
    @media $mobile
      height: 216px
  .seven-day-interest
    height: 100%

.product-desc-mod
  text-align: center
  color: #fff
  font-weight: bold
  .title
    font-size: 40px
    margin-bottom: 15px
    margin-top: 23px
  .desc
    line-height: 1.8
    margin-bottom: 15px
  .btn
    line-height: 42px
    color: #fff
    border: 1px solid #fff
    padding: 0 40px

.wallet-product-mod
  background-color: $blue_gray_40
  .btn
    &:hover
      background-color: $blue_gray_50

.saving-product-mod
  background-color: $orange_40
  .btn
    &:hover
      background-color: $orange_50

.product-card-mod
  float: left
  width: 49%
  height: 100%
  background-color: #fff
  margin-right: 2%
  text-align: center
  color: $gray_50
  &:last-child
    margin-right: 0
  strong
    color: $orange_60
  badge()
  >.hd
    padding: 24px 0
    margin: 0 38px
    border-bottom: 1px solid $gray_30
    @media $mobile
      margin: 0 15px
  .title
    color: $orange_60
    font-size: 16px
    padding-bottom: 10px
  >.bd
    .interest
      display: inline-block
      color: $orange_60
      font-size: 30px
      margin: 35px 0 15px
      @media $mobile
        font-size: 22px
    p
      font-size: 12px
    .tip
      margin-top: 30px
      @media $mobile
        margin-top: 20px

