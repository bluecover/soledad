.weixin-bound-wrapper
  background-color: #F6F7FB
  text-align: center

  .weixin-txt
    background-color: #fff
    padding: 50px 0
    border-bottom: 1px solid #aaa
    margin-bottom: 30px

  h1
    font-size: 28px
    color: #000
    line-height: 70px
    .iconfont
      font-size: 36px
      color: #1EB808
      padding-right: 10px

  h2
    padding-left: 85px
    font-size: 20px
    color: #777

  .bind-weixin-btn
    border: 0
    color: #fff
    background-color: #94B422
    width: 90%
    line-height: 60px
    font-size: 30px

  .bind-weixin-btn.unbind
    background-color: #ff7f00
