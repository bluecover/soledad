.info-user-wrapper
  background-color: $teal_30
  margin-bottom: 0
  input
    -webkit-appearance: none
  p
    line-height: 1.6
  .btn-start
    width: 100%
    margin-top: 10px
    padding-top: 4px
    padding-bottom: 4px
  .banner
    color: #fff
    padding-bottom: 30px
    img
      width: 100%
    p
      margin-top: 20px
  .img-box
    padding-left: 20px
  .section-wrapper
    border-radius: 3px
    h5
      margin-bottom: 15px
      line-height: 1.6
    .input-con
      margin-bottom: 0
      input[type=text]
        border-radius: 3px
        height: 40px
        padding-right: 25px
      .input-unit
        top: 8px
        border-left: none !important
      .input-prefix
        top: 8px
        border-style: none !important
  .budget-wrapper
    input[type=text]
      padding-left: 90px

  .gender-main
    clearfix()
    .gender-box
      border-radius: 3px
      col(1/2, gutter:5)
      border: 1px solid $gray_20
      height: 145px
      display: block
      input:checked
        + .circle
          background-color: $teal_30
          i
            display: block
      &:last-child
        input:checked
          + .circle
            background-color: #f6779e
    input
      width: 0
      height: 0
      opacity: 0
    .circle
      border-radius: 50%
      background: $gray_20
      width: 80px
      height: 80px
      margin: 0 auto 15px
      position: relative
      z-index: 1
    i
      color: $green_70
      display: block
      position: absolute
      width: 16px
      height: 16px
      left: 50%
      margin-left: -8px
      margin-top: 8px
      display: none
      &:after
        width: 100%
        height: 100%
        background-color: #FFF
        content: ''
        border-radius: 50%
        position: absolute
        z-index: -1
        left: 0
        top: 0
    svg
      width: 50px
      height: 50px
      margin-top: 10px

  .age-main
    clearfix()
    .age-box
      col(1/2, gutter:5)
      position: relative
      label
        border: 1px solid $gray_20
        text-align: center
        padding: 20px 0
        width: 100%
        display: block
      input
        float: left
        width: 0
        height: 0
        opacity: 0
        position: absolute
        top: 0
      input:checked
        +label
          background-color: $teal_30
          color: #fff
          +i
            display: block
      i
        position: absolute
        right: 5px
        bottom: 5px
        color: #fff
        display: none
  .balloon-box
    width: 230px
    margin: 30px auto
    .balloon
      position: relative
      width: 70px
      height: 70px
      color: $gray_50
      &:nth-child(1)
        margin: 0 auto
        label
          padding-top: 20px
      &:nth-child(2)
        left: 0
      &:nth-child(3)
        margin-top: -60px
        margin-left: 80px
      &:nth-child(4)
        right: 0
        margin-top: -80px
        margin-left: 160px
        label
          padding-top: 20px
      &:nth-child(5)
        margin-top: 10px
        left: 30px
      &:nth-child(6)
        margin-top: -70px
        left: 130px
    input
      width: 0
      height: 0
      top: 0
      position: absolute
      opacity: 0
      &:checked
        + label
          background-color: $teal_30
          color: #fff
          border: 1px solid $teal_30
    label
      width: 100%
      height: 100%
      border-radius: 50%
      text-align: center
      border: 1px solid $gray_30
      position: relative
      display: block
      padding-top: 27px
      em
        display: block
    i
      position: absolute
      left: 50%
      margin-left: -6px
      bottom: 5px
      color: #fff
      font-size: 12px
  .logo-img
    width: 150px
    margin-top: 20px
    opacity: .6

.mask-main
  padding: 18px 0
  background-color: rgba(0, 0, 0, .5)
  position: fixed
  color: #fff
  text-align: center
  font-size: 16px
  z-index: 5
  bottom: 0
  width: 100%
  em
    text-decoration: underline
  i
    float: right
    margin-right: 20px

