.detail-result-wrapper
  h2
    text-align: center
    font-size: 20px
    margin: 20px 0 30px
    font-weight: bold
  .principle-wrapper
    background-color: $teal_30
    margin-bottom: 0
    position: relative
    h3
      margin-bottom: 15px
    i
      color: $teal_30
      font-size: 30px
    .circle
      border-radius: 50%
      width: 40px
      height: 40px
      line-height: 40px
      background-color: #FFF
    p
      color: $teal_10
      margin-bottom: 5px
      line-height: 1.5
      opacity: .8
    a
      position: absolute
      right: 20px

  .section-wrapper
    .title-box
      font-size: 12px
      position: fixed
      left: 0
      height: 40px
      line-height: 40px
      background-color: rgba(255,255,255,.9)
      width: 100%
      padding: 0 20px
      box-shadow: 0 2px 2px -2px #999
      border-top: 1px solid $gray_30
      z-index: 10
      img
        width: 20px
        margin-top: 10px
        float: left
        margin-right: 10px
    p
      line-height: 1.8
      color: $gray_50
    .chart-box
      height: 200px
    .circle
      border-radius: 50%
    .circle-group-1
      margin-top: 20px
      margin-bottom: 20px
      .circle-imprest
        width: 90px
        height: 90px
        background-color: $teal_30
        display: inline-block
        padding-top: 30px
        vertical-align: middle
        font-size: 12px
      .circle-savings
        width: 75px
        height: 75px
        background-color: $green_30
        padding-top: 25px
        display: inline-block
        vertical-align: middle
        font-size: 12px
      .circle-salary
        width: 60px
        height: 60px
        background-color: $orange_40
        padding-top: 15px
        display: inline-block
        vertical-align: middle
      .text-num
        color: $orange_40
    .circle-group-2
      .circle-savings
        margin: 20px auto
        width: 150px
        height: 150px
        position: relative
        background-color: $green_30
        padding-top: 15px
      .circle-imprest
        width: 100px
        height: 100px
        left: 50%
        margin-left: -50px
        position: absolute
        bottom: 0
        background-color: $teal_30
        padding-top: 35px
    .imprest-chart
      width: 200px
      margin: 0 auto 20px
      display: block
    .compare-box
      position: relative
      top: 10px
      z-index: 9
      font-size: 0
    .circle-box
      background-color: $gray_30
      border: 1px solid $gray_40
      text-align: center
      width: 30px
      height: 30px
      color: #fff
      line-height: 30px
      border-radius: 50%
      position: absolute
      left: 50%
      top: -10px
      margin-left: -15px
      white-space: nowrap
      font-size: 14px
    .half-box
      font-size: 14px
      width: 50%
      display: inline-block
    .left-box
      padding-right: 20px
      text-align: right
    .right-box
      padding-left: 20px
      text-align: left

  .pro-wrapper
    margin-bottom: 0
    .product-box
      width: 100%
      margin: 0 auto
      border: 1px solid $gray_20
      margin-bottom: 50px
    .title
      position: relative
      background: #fff
      padding: 0 6px
      top: -6px
      color: $fancy_gray_30
    .twocol-content
      width: 280px
      margin: 20px auto 0
      color: $gray_50
    img
      width: 110px
    p
      margin-bottom: 13px
    i
      color: $gray_30
      margin-right: 5px
    .btn-direct
      display: block
      border-top: 1px solid $gray_20
      margin-top: 10px
      background-color: #fafafa
      padding-top: 3px
      padding-bottom: 3px
      color: #1466bf