@import 'jeet'

.savings-order-wrapper
  .order-info
    border-top: 5px solid $orange_40
    margin-bottom: 15px
    @media $mobile
      border-top: 0
    .welfare-tips
      margin-top: 10px
    .input-box
      width: 250px
      position: relative
      display: inline-block
      @media $mobile
        width: 100%
      .input-unit
        line-height: 30px
        position: absolute
        padding: 0 10px
        top: 6px
        right: 5px
      .input-prefix
        line-height: 30px
        position: absolute
        padding: 0 10px
        top: 6px
    .deduction-box
      margin-top: 20px
      line-height: 1.8
      >label
        margin: 0 5px
    .icon-exclamation
      cursor: pointer
      margin-left: 5px
    .mask
      position: fixed
      top: 0
      left: 0
      right: 0
      bottom: 0
      background-color: rgba(0,0,0,.8)
      overflow: auto
      z-index: 9
      cursor: pointer
    .coupon-box
      margin-top: 10px
      i
        font-size: 14px
        display: inline-block
        transition: all .5s ease
        margin-right: 9px
        &.cur
          transform: rotate(90deg)
          transition: transform .5s ease
      >span
        cursor: pointer
      a
        margin-left: 10px
        @media $mobile
          display: block
          margin-top: 10px
          margin-left: 23px
          width: 70px
      .coupon-main
        margin-top: 20px
        @media $mobile
          position: fixed
          left: 0
          bottom: 0
          z-index: 10
          height: 70%
          width: 100%
          margin-top: 0
          padding-left: 20px
          padding-right: 20px
          overflow: scroll
          background-color: #fff
        @import '../../mods/_coupon.styl'
        .coupon-item
          &.coupon-void
            cursor: default
            h5
              color: $gray_50
            img
            >span
              display: block
          img
            position: absolute
            top: -6px
            right: -6px
            width: 60px
            display: none
          h5
            margin: 10px 0 15px
            color: $orange_50
            span
              font-size: 32px
              font-weight: 200
          p
            margin-top: 10px
            font-size: 12px
            color: $gray_50
          >span
            position: absolute
            right: 0
            top: 13px
            display: none
            transform: rotate(50deg)
          &.coupon-selected
            border: 1px solid $orange_50
            &:before
              border: 1px solid $orange_50



  .order-section
    margin-bottom: 20px
    &:last-child
      margin-bottom: 0
    h2
      font-size: 18px
      margin-bottom: 12px

  .select-date,
  .input-money
    width: 250px
    height: 40px
    padding: 0 30px 0 45px
    font-size: 16px
    line-height: 40px
    border: 1px solid $blue_gray_50
    outline: none
    border-radius: 3px
    transition: border-color .1s ease
    @media $mobile
      width: 100%
    &:focus
      border: 1px solid $blue_gray_50

  .select-date
    border-radius: 0
    color: $gray_light
    margin-right: 10px
    @media $mobile
      width: 47%
      margin-right: 10px
      &:last-child
        margin-right: 0

  .tips-info
    height: 39px
    line-height: 40px
    display: inline-block
    margin-left: 10px
    padding: 0 10px
    border-radius: 3px
    position: relative
    @media $mobile
      width : 100%
      overflow: hidden
      margin-left: 0
      margin-top: 10px
    &:before
      position: absolute
      content: ''
      left: -10px
      top: 15px
      @media $mobile
        display: none
    &.profit-info
      background-color: $yellow_20
      &:before
        triangle(5px, right, color=$yellow_20)
      i
        color: $red_50
    &.date-info
      background-color: $yellow_20
      &:before
        triangle(5px, right, color=$yellow_20)
      i
        color: $yellow_70
    &.has-error
      background: $red_10
      &:before
        triangle(5px, right, color=$red_10)
      i
        color: $red_30
  i
    margin-right: 3px

  .coupon-con
    margin-top: 20px
    *
      display: inline-block
      vertical-align: middle
    input
      margin: 0 3px 0 0

  .form-wrapper
    .item
      padding: 10px 0
      @media $mobile
        padding: 0
      .title
        text-align: left
    .top-align
      vertical-align: top

    .bank-tips
      font-size: 12px
      text-align: center
      background: #f5f5f5
      line-height: 1.6
      padding: 5px

  .submit-con
    margin: 35px 0 10px
    .btn-submit
      padding: 3px 20px
  .deal-link
    line-height: 1.8
  .btn-card-action
    padding: 5px 10px
    font-weight: normal
    font-size: 12px
    border: 1px dashed $gray_40
    margin-left: 10px
    &:hover
      background-color: $gray_10
    &.cancel
      border: none
    em
      color: $gray_60
      margin-left: 5px
