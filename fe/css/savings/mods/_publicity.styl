.savings-publicity-wrapper
  .btn-start
    padding: 3px 60px
    margin: 20px auto 10px
    @media $mobile
      margin: 0 auto 10px
  .banner
    background-color: $orange_40
    margin-bottom: 0
    clearfix()
    @media $mobile
      padding: 0
    .col-1
      col(.35)
      @media $mobile
        stack()
    .col-2
      col(.65)
      @media $mobile
        stack()
        padding-bottom: 20px
    .title-box
      background-color: $orange_10
      width: 260px
      margin: 0 auto
      padding: 20px 30px 30px
      border-radius: 5px
      @media $mobile
        padding: 20px
        width: 100%
        font-weight: bold
        background-color: transparent
        margin-bottom: 20px

    h2
      font-size: 38px
      margin: 30px auto 15px
      color: $brown_60
      @media $mobile
        font-size: 44px
        margin: 0 auto 15px
    .sub-title
      margin-bottom: 15px
      @media $mobile
        margin-bottom: 0
    .chart-box
      width: 100%
      height: 270px
      @media $mobile
        height: 240px

  .section-wrapper
    clearfix()
    margin-bottom: 0
    &.reverse-mobile
      background-color: $gray_10
    &.reverse
      background-color: $gray_10
      .left-box
        padding-top: 40px
      .right-box
        padding-top: 0
    .left-box
      col(1/2,gutter: 5)
      text-align: right
      @media $mobile
        col(.45,gutter: 3)
      img
        @media $mobile
          float: left
    .right-box
      col(1/2,gutter: 5)
      padding-top: 60px
      @media $mobile
        col(.55,gutter: 3)
        padding-top: 10px
      img
        @media $mobile
          float: right
    img
      width: 280px
      &.pig
        width: 265px
        @media $mobile
          width: 130px
      @media $mobile
        width: 130px
    h3
      font-size: 30px
      margin-bottom: 30px
      color: #f57c00
      @media $mobile
        margin-bottom: 10px
        font-size: 20px
        color: #333
    p
      line-height: 1.5
      font-size: 18px
      @media $mobile
        font-size: 13px