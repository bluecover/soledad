@import 'jeet'
@import '../mods/_badge.styl'

.alert
  padding: 20px
  margin-bottom: 15px
  .icon-close
    float: right
    font-size: 12px
    cursor: pointer
  .bell-box
    width: 40px
    height: 40px
    margin-right: 5px
    background-color: #ffe99e
    border-radius: 50%
    text-align: center
    line-height: 40px
    color: #FEFBF5
  .icon-bell
    font-size: 25px
  p
    line-height: 1.5
    color: $gray_60
  h5
    margin-bottom: 10px
.alert-danger
  background-color: #F2DEDE
  color: #a94442
.alert-warning
  background-color: $yellow_10

.savings-index-wrapper
  overflow: hidden
  background-color: #fff
  .banner
    height: 350px
    background-color: $orange_40
    padding: 44px 70px
    margin-bottom: 0
    color: #fff
    position: relative
    @media $mobile
      padding: 20px
      height: auto
    .savings-logo
      display: inline-block
      width: 281px
      margin-bottom: 14px
      margin-right: 15px
      @media $mobile
        display: block
        margin: 0 auto 14px
        width: 90%
    .subtitle
      font-size: 39px
      margin-bottom: 60px
      color: $brown_60
      @media $mobile
        margin-bottom: 15px
        font-size: 18px
        font-size: 7vw
        text-align: center
    .btn-act-detail
      color: #fff
      vertical-align: bottom
      margin-bottom: 10px
      padding-left: 20px
      display: inline-block
      @media $mobile
        display: block
        text-align: center
        padding-left: 0
    .feature-box-desktop
      display: inline-block
      vertical-align: top
      padding-top: 9px
      p
        margin-bottom: 16px
        font-size: 16px
    .feature-box-mobile
      font-size: 18px
      margin-bottom: 30px
      color: #fff
      @media $mobile
        margin-bottom: 0
        font-size: 14px
        text-align: center
      span
        margin-right: 15px

    .savings-img
      position: absolute
      width: 50%
      right: 2%
      bottom: 0
      @media $mobile
        position: relative
        width: 81%
        display: block
        margin: 0 auto
        right: auto
        top: 24px

    .icon-checked
      margin-right: 5px
      font-size: 18px
      opacity: .8
    .btn-start
      padding: 0 60px
      &:hover
        background-color: rgba(245, 124 ,0,0.7)
      @media $mobile
        width: 80%
        display: block
        margin: 24px auto 10px
  .product-desc
    line-height: 2
    @media $mobile
      padding-top: 30px
    img
      width: 90px
      float: left
      margin-top: -5px
      margin-right: 2px
    .money-box
      margin: 20px auto 0
      text-align: center
      .num-box
        width: 44px
        height: 59px
        line-height: 50px
        display: inline-block
        position: relative
        font-size: 40px
        color: #fff
        font-weight: bold
        text-align: center
        @media $mobile
          width: 23px
          height: 31px
          font-size: 18px
          line-height: 20px
        span
          position: relative
      .comma
        font-size: 40px
        color: $gray_40
        @media $mobile
          font-size: 14px
      .unit
        @media $mobile
          font-size: 12px
      img
        width: 44px
        position: absolute
        top: 0
        left: 0
        @media $mobile
          width: 23px

  h3
    font-size: 24px
    text-align: center
    color: $gray_80
    margin-top: 15px
    margin-bottom: 50px
    @media $mobile
      margin-bottom: 30px
    span
      display: block
      font-size: 14px
      color: $gray_60
      margin-top: 15px
  h4
    font-size: 60px
  .product-box
    background-color: $gray_10
  .product-main
    width: 90%
    margin: 0 auto
    clearfix()
    .col-wrapper
      col(1/3, gutter:6)
      border: 1px solid $gray_20
      @media $mobile
        stack()
        width: 90%
        margin: 0 auto
        margin-bottom: 20px
      badge(70px,15px)
      &:first-child
        h2
          background-color: $red_50
      h2
        color: #fff
        font-size: 20px
        text-align: center
        padding: 15px 0
        background-color: $orange_50

    .product
      padding: 30px 20px 40px
      text-align: center
      background-color: #FFF
      clearfix()
      position: relative
      h4
        height: 60px
        font-size: 40px
        border-bottom: 1px dotted $gray_30
        width: 85%
        margin: 0 auto 30px
        em
          font-size: 28px
        .small
          font-size: 16px
          margin-top: 11px
      p
        text-align: left
        width: 160px
        margin: 0 auto 10px
      .profit
        width: 90%
        display: block
        margin: 0 auto 15px
        text-align: center

  .help-wrapper
    clearfix()
    @media $mobile
      width: 95%
    .desc-col
      col(1/3, gutter:1)
      margin-bottom: 20px
      &:last-child
        @media $mobile
          margin-bottom: 0
        p
          border-right: none
      @media $mobile
        stack()
        position: relative
        height: 110px
        p
          border-right: none
          align(vertical)
          margin-left: 100px
    .circle-box
      padding-top: 10px
      width: 170px
      height: 170px
      margin: 0 auto 34px
      border-radius: 50%
      border: 1px solid $orange_30
      text-align: center
      font-size: 16px
      @media $mobile
        padding-top: 5px
        width: 90px
        height: 90px
        align(vertical)
        span
          font-size: 10px
          top: -8px
          position: relative

    img
      display: block
      width: 90px
      margin: 20px auto
      @media $mobile
        width: 58px
        margin: 10px auto 5px
    p
      line-height: 1.7
      color: #999
      padding: 0 40px
      border-right: 1px solid #EEF0F4
      text-align: justify
      text-justify: inter-word
      margin-top: 2px
      @media $mobile
        padding: 0
        font-size: 14px

  .step-wrapper
    background-color: $gray_10
  .line-main
    padding: 26px 15px 0 0
    overflow: hidden
    .line
      position: relative
      margin-bottom: 50px
      col(1/5, gutter: 0, cycle: 5)
      &:after,
      &:before
        content: ''
        position: absolute
        height: 1px
        width: 50%
        border-top: 1px dashed #CDD7DA
        top: 0
      &:before
        left: 0
      &:after
        left: 50%
      @media $mobile
        col(1/3, gutter: 0, cycle: 3)
        &:nth-child(4):before
          border-top: none
        &:nth-child(5n)
          float: left
    .line-left:before,
    .line-right:after
       border-top: none
    .icon-arrowright
      position: absolute
      right: -8px
      top: -8px
      background-color: $gray_10
      color: #B0BFC3
      z-index: 1
    .icon-circle
      font-size: 48px
      top: -22px
      left: 50%
      margin-left: -29px
      padding-left: 2px
      padding-right: 2px
      background-color: $gray_10
      position: relative
      color: $orange_40
      z-index: 1
    span
        display: block;
        text-align: center;
        margin-top: -10px;
        line-height: 1.2;
    .icon-cicheck
      color: #7DB149
    .nowrap
      white-space: nowrap

  .savings-btn
    padding: 3px 70px
    margin-bottom: 20px
    @media $mobile
      width: 100%
