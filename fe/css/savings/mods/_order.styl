@import 'jeet'

.savings-order-wrapper
  .order-info
    background: $orange_30
    margin-bottom: 0

    .input-money
      width: 180px
      height: 40px
      padding: 0 15px
      font-size: 16px
      line-height: 40px
      border: 1px solid #ccc
      outline: none
      transition: border-color .1s ease
      &:focus
        border: 1px solid $blue_gray_30

    .detail-info
      background: $yellow_10
      height: 39px
      line-height: 40px
      display: inline-block
      padding: 0 15px
      margin-left: 30px
      @media $mobile
        margin-left: 0
        margin-top: 10px
      &.has-error
        background: $red_20

    .coupon-con
      margin-top: 20px
      *
        display: inline-block
        vertical-align: middle
      input
        margin: 0 3px 0 0

  .form-wrapper
    .item
      padding: 10px 0
      @media $mobile
        padding: 0
      .title
        text-align: left
    .top-align
      vertical-align: top

    .bank-tips
      font-size: 12px
      text-align: center
      background: #f5f5f5
      line-height: 1.6
      padding: 5px

  .submit-con
    margin: 35px 0 10px

  .btn-card-action
    padding-left: 20px
    font-size: 16px
    font-weight: normal
