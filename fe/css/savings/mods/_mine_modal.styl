.dlg-set-target
  .input-con
    font-size: 16px
    width: 100%
    position: relative
    margin-bottom: 20px
    input
      font-size: 18px
      outline:none
      background: rgba(0, 0, 0, 0)
      width: 100%
      height: 50px
      padding: 6px 40px 6px 20px
      border: 1px solid $border_color
    span
      right: 5px
      top: 6px
      font-size: 18px
      color: $gray_light
      position: absolute
      line-height: 38px
      padding: 0 10px
    .prefix
      position: absolute
      left: 5px
      right: initial

  .error-text
    display: none
    color: #ff4e00
    margin: -10px 0 10px 0

  .btn-saving
    line-height: 45px
    display: block
    color: #fef8eb

.dlg-record-detail
  .onemodal-hd
    span
      padding-right: 30px
      @media $mobile
        display: block
        padding-right: 0
        &:first-child
          padding-bottom: 10px

  .onemodal-bd
    line-height: 1.8
    td:first-child
      text-align: right
      padding-right: 10px
