.savings-suixin-wrapper
  .icon-ios,
  .icon-android
    width: 20px
    height: 20px
    vertical-align: middle
    margin-top: -4px

  .banner
    height: 350px
    background-color: $yellow_70
    padding: 44px 70px
    margin-bottom: 0
    color: #fff
    position: relative
    @media $mobile
      height: auto
      padding: 20px 20px 0
      text-align: center
    .savings-logo
      width: 230px
      margin-bottom: 20px
      display: inline-block
      @media $mobile
        width: 60%
    .bubble
      width: 55px
      height: 55px
      background-color: #fff
      border-radius: 50%
      color: $orange_70
      text-align: center
      padding-top: 12px
      margin-left: 20px
      display: inline-block
      vertical-align: top
      position: relative
      &:after
        content: ''
        width: 0
        height: 0
        position: absolute
        left: -7px
        bottom: 7px
        border-left: 5px solid transparent
        border-right: 5px solid transparent
        border-top: 15px solid #fff
        transform: rotate(60deg)
      p
        margin-bottom: 3px
        font-weight: bold
    .subtitle
      font-size: 16px
      margin-bottom: 30px
      color: $brown_70
      @media $mobile
        font-size: 4vw
      span
        margin-right: 10px
    .qrcode
      width: 108px
      position: relative
      border: 5px solid #fff

    .twocol-content
      .right-col
        @media $mobile
          width: 100%
      a
       display: block
       margin-bottom: 18px
       padding: 5px 18px
       margin-left: 10px
       @media $mobile
         width: 85%
         margin: 0 auto 10px
    .banner-img
      position: absolute
      width: 43%
      right: 4%
      bottom: 0
      @media $mobile
        position: relative
        bottom: auto
        width: 100%
        right: auto
        margin-top: 20px

  .about-wrapper
    padding: 40px 60px
    background-color: #FFF
    @media $mobile
      padding: 20px
    .about-row
      margin-bottom: 40px
      clearfix()
      @media $mobile
        margin-bottom: 20px
    .about-col
      col(1/2, gutter:10)
      @media $mobile
        stack()
        margin-bottom: 20px
        &:last-child
          margin-bottom: 0
    .icon-svg
      width: 45px
      height: 45px
      float: left
      margin-top: -3px
      @media $mobile
        width: 30px
        float: none
        display: inline-block
        vertical-align: middle
      + h4
        display: inline-block
        vertical-align: middle
        font-size: 25px
        color: $orange_50
    .content-box
      margin-left: 55px
      @media $mobile
        margin-left: 0
        display: block
      h4
        font-size: 18px
        font-weight: bold
        margin-bottom: 15px
    h3
      font-size: 20px
      margin-bottom: 60px
      @media $mobile
        margin-top: 20px
        margin-bottom: 40px
    h5
      margin: 20px 0 6px
      font-size: 16px
    p
      color: $gray_50
      margin-bottom: 10px
      line-height: 1.5

  .foot-wrapper
    margin-top: -15px
    background: $gray_10
    a
      padding: 5px 18px
      margin-right: 30px
      @media $mobile
        display: block
        margin-bottom: 10px
        width: 80%
        margin: 0 auto 10px
