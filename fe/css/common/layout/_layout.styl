.global-banner
  background: $brand_orange
  text-align: center
  color: #fff
  line-height: 42px

.content-wrapper
  margin: 30px
  margin-left: 230px
  @media $mobile
    margin: 0

.main-wrapper
  margin: 0 auto
  width: auto
  min-width: 900px
  max-width: 1100px
  @media $mobile
    min-width: 0

.block-wrapper
  background: #fff
  padding: 40px 50px
  margin-bottom: 15px
  @media $mobile
    padding: 20px
    margin-bottom: 10px
  .block-title
    font-size: 18px
    color: $gray_dark
    margin-bottom: 25px
    font-weight: bold
    @media $mobile
      margin-bottom: 15px
