.about-content
  padding: 30px 40px
  background: #fff
  @media $mobile
    padding: 20px 3%
    border-top: none !important
  h2
    font-size: 22px
    border-bottom: 1px dotted $gray_30
    padding-bottom: 10px
    margin-bottom: 30px
  h3
    color: #000
    line-height: 22px
    font-size: 16px

  p
    color: #595757
    line-height: 28px
    padding-bottom: 30px

  h4
    display: inline-block
    color: #595757
    line-height: 30px
  .feedback-form
    width: 100%
  .qrcode
    display: block
    width: 120px
    margin-left: 64px
.join-wrapper
  .intro
    line-height: 28px
    padding-bottom: 30px
    h3
      display: inline-block
  .jobs-title
    line-height: 40px
  .jobs
    line-height: 1.7
    overflow: hidden
    .jobs-item
      margin-bottom: 10px
      overflow: hidden
      .jobs-kind
        float: left
        width: 60px
      .jobs-name
        float: left
        width: 600px
        @media $mobile
          width: 78%
        a
          display: inline-block
          padding: 0 5px

  .jobs-border
    height: 30px
    border-bottom: 1px dotted #222
    margin-bottom: 30px

  .jobs-list
    margin-bottom: 30px
    h3
      line-height: 30px
      margin-top: 20px
    h4
      font-weight: bold
      color: #000
    p
      padding-bottom: 5px

