.feedback-form
  width: 500px
  @media $mobile
    width: 100%
  .feedback-title
    font-size: 16px
    text-indent: 0.5em
    margin-bottom: 20px

  .feedback-txt
    padding: 4px 0 20px
    line-height: 22px
    text-align: justify
    text-justify: inter-word

  .feedback-con
    border: 1px solid rgb(203, 215, 253)
    padding: 10px
    margin-top: 8px
    margin-bottom: 5px
    textarea
      font-size: 14px
      width: 100%
      height: 78px
      padding: 0
      overflow-y: auto
      outline: none
      border: none
      resize: none

    .tips
      float: right
  .feedback-operate
    display: none
  .right-col
    width: 100%
  input
    display: block
    padding: 5px 10px
    width: 100%
    border: 1px solid #cbd7fd
    color: #999
    outline: none
    margin: 15px 0 5px
    font-size: 14px

  .feed-submit
    float: right
    margin-top: 10px
