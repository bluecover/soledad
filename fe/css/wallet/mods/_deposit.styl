.wallet-deposit-wrapper
  .order-info
    background: #e4e8f1
    margin-bottom: 0

    .block-title
      .order-date
        font-size: 14px
        color: $gray_light
        padding-left: 10px
        font-weight: 100

    .input-title
      font-size: 16px
      line-height: 30px
      padding-right: 15px

    input[type=text]
      padding: 10px 12px
      height: auto

    .input-unit
      line-height: 28px

  .bankcard-con
    .bank-tips
      font-size: 12px
      text-align: center
      background: #f5f5f5
      line-height: 1.6
      padding: 5px

    .form-wrapper
      .item
        padding: 10px 0
        @media $mobile
          padding: 0
      .top-align
        vertical-align: top

  .form-wrapper
    .text-tips
      margin-top: 10px
      line-height: 1.5
    .item
      padding: 10px 0
      @media $mobile
        padding: 0
      .title
        text-align: left
    .top-align
      vertical-align: top

    .bank-tips
      font-size: 12px
      text-align: center
      background: #f5f5f5
      line-height: 1.6
      padding: 5px

  .submit-con
    margin: 35px 0 10px

  .btn-card-action
    padding: 5px 10px
    font-weight: normal
    font-size: 12px
    border: 1px dashed $gray_40
    margin-left: 10px
    &:hover
      background-color: $gray_10
    &.cancel
      border: none
    em
      color: $gray_60
      margin-left: 5px

  .tips-info
    height: 39px
    line-height: 40px
    display: inline-block
    margin-left: 10px
    padding: 0 10px
    position: relative
    @media $mobile
      width : 100%
      overflow: hidden
      margin-left: 0
      margin-top: 10px
    &:before
      position: absolute
      content: ''
      left: -10px
      top: 15px
      @media $mobile
        display: none
    &.has-error
      background: $red_10
      &:before
        triangle(5px, right, color=$red_10)
      i
        color: $red_30
    i
      margin-right: 5px
