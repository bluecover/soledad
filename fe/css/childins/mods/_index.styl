.childins-index-wrapper
  .banner
    height: 350px
    background-color: $green_50
    margin-bottom: 0
    color: #fff
    position: relative
    padding: 44px 70px
    @media $mobile
      height: auto
      padding: 20px
    .childins-logo
      display: inline-block
      width: 370px
      margin-bottom: 14px
      margin-right: 20px
      @media $mobile
        display: block
        margin: 0 auto 14px
        width: 100%
    .subtitle
      color: $blue_gray_90
      font-size: 40px
      margin-bottom: 60px
      @media $mobile
        margin-bottom: 15px
        font-size: 18px
        font-size: 8vw
        text-align: center
    .feature-box-desktop
      display: inline-block
      vertical-align: top
      padding-top: 9px
      p
        margin-bottom: 16px
        font-size: 16px
    .feature-box-mobile
      font-size: 18px
      margin-bottom: 30px
      color: #fff
      @media $mobile
        margin-bottom: 0
      span
        margin-right: 15px
      @media $mobile
        font-size: 14px
        text-align: center
    .childins-img
      width: 320px
      position: absolute
      right: 50px
      top: 30px
      @media $mobile
        position: relative
        width: 80%
        display: block
        margin: 0 auto
        right: auto
        top: auto
    .icon-checked
      margin-right: 5px
      font-size: 18px
      opacity: .8
    .btn-start
      padding: 0 60px
      @media $mobile
        padding: 0
        width: 80%
        display: block
        margin: 0 auto 10px
    .slogan-box
      width: 240px
      whitespace: nowrap
      text-align: center
      @media $mobile
        width: auto
        margin: 0 auto
    .slogan
      margin-top: 10px
      @media $mobile
        text-align: center
        margin-bottom: 2px

  .desc-wrapper
    clearfix()
    margin-bottom: 0
    h3
      text-align: center
      font-size: 24px
      color: #31536D
      margin-bottom: 40px
      margin-top: 20px
    .desc-col
      col(1/3, gutter:1)
      margin-bottom: 20px
      &:last-child
        @media $mobile
          margin-bottom: 0
        p
          border-right: none
      @media $mobile
        stack()
        p
          border-right: none
          padding-top: 15px
    .circle-box
      width: 170px
      height: 170px
      margin: 0 auto 34px
      border-radius: 50%
      border: 1px solid $green_50
      text-align: center
      font-size: 16px
      @media $mobile
        width: 90px
        height: 90px
        margin-bottom: 20px
        float: left
        margin-right: 10px
        span
          font-size: 12px
          top: -8px
          position: relative
    img
      display: block
      width: 90px
      margin: 20px auto 10px
      @media $mobile
        width: 58px
        margin: 10px auto 0
    p
      line-height: 1.5
      color: #999
      padding: 0 35px
      border-right: 1px solid #EEF0F4
      text-align: justify
      text-justify: inter-word
      margin-top: 2px
      @media $mobile
        padding: 0
        font-size: 13px

  .advantage-wrapper
    background-color: $green_50
    margin-bottom: 0
    clearfix()
    .title-cloud
      display: block
      margin: 20px auto 40px
      width: 100%
    .title-box
      width: 520px
      margin: 30px auto 50px
      text-align: center
      @media $mobile
        width: 100%
    em
      display: inline-block
      color:  $green_80
      margin: 0 5px 16px
      position: relative
      &:nth-child(1)
        display: block
        font-size: 15px
        margin-bottom: 10px
      &:nth-child(2)
        font-size: 24px
        margin-left: 20px
      &:nth-child(3)
        top: 1px
        font-size: 18px
        margin-right: 40px
      &:nth-child(4)
        top: -15px
        font-size: 14px
        margin-right: 0
      &:nth-child(5)
        font-size: 28px
        margin-left: 0
        margin-right: 0
        top: -5px
      &:nth-child(6)
        font-size: 12px
      &:nth-child(7)
        top: -13px
        font-size: 13px
      &:nth-child(8)
        font-size: 17px
        top: -3px
      &:nth-child(9)
        top: -10px
        font-size: 16px
    h3
      color: #fff
      font-size: 30px
      margin-bottom: 50px
      font-weight: bold
      text-align: center
      @media $mobile
        font-size: 24px
    .advantage-col
      span(1/3)
      color: #fff
      margin-bottom: 30px
      text-align:center
      @media $mobile
        stack()
      img
        width: 94px
    .left-box
      @media $mobile
        col(1/3, gutter:5)
    .right-box
      @media $mobile
        col(2/3, gutter:5)
        text-align: left
    h4
      font-size: 22px
      margin-bottom: 8px
    p
      margin-bottom: 10px

  .foot
    text-align: center
    margin-bottom: 0
    padding-bottom: 40px
    .btn-start
      width: 200px
      margin: 20px 0
      @media $mobile
        width: 90%
    p
      margin-bottom: 5px
    strong
      color: #D47490
    .slogan
      font-size: 16px
      color: #507EA1
