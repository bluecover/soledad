.register-success-wrapper
  margin: 40px auto
  width: 1100px
  @media $mobile
    width: 100%
    margin: 0
  .inner-wrapper
    width: 320px
    margin: 0 auto
    @media $mobile
      width: 100%
  .verification-box
    padding-top: 120px
    @media $mobile
      padding-top: 40px
    .iconfont
      margin-right: 5px
      font-size: 20px
    h2
      font-size: 20px
      line-height: 20px
      color: #31b018
      text-align: center

  .success-desc
    margin-top: 100px
    text-align: center
    line-height: 30px
    @media $mobile
      margin-top: 80px

  .success-todo
    margin-top: 40px
    @media $mobile
      margin-top: 25px
      padding-bottom: 100px
    .title
      font-size: 16px
      line-height: 16px
      margin-bottom: 30px
      text-align: center
      @media $mobile
        margin-bottom: 25px
    .btn
      width: 100%
      margin-bottom: 50px
      @media $mobile
        margin-bottom: 25px

    .todo-item
      line-height: 30px
