.body-invite
  background-color: #ffe0b2

.invite-index-wrapper
  padding-top: 50px
  position: relative
  @media $mobile
   padding-top: 0
   overflow-x: hidden
   width: 100%
   padding-bottom: 100px

  .invite-mail-pic
    width: 370px
    position: absolute
    left: 50%
    margin-left: -185px
    top: 50px
    z-index: -1
    @media $mobile
      width: 300px
      margin-left: -150px
      top: 20px
  .invite-mail
    margin: 0 auto
    width: 370px
    padding: 0 10px 100px
    margin-bottom: 100px
    @media $mobile
      margin: 20px auto 20px
      width: 300px
      padding-bottom: 30px
    .title
      font-size: 20px
      color: #999
      height: 68px
      line-height: 68px
      text-align: center
      @media $mobile
        font-size: 14px
        margin-left: 0
        height: 55px
        line-height: 55px

  .invite-mail-bd
    margin-top: 207px
    text-align: center
    padding-top: 15px
    @media $mobile
      margin-top: 166px
      padding-top: 10px
    h6
      font-size: 16px
      @media $mobile
        font-size: 14px
    .phone-form
      position: relative
      z-index: 10
      font-size: 16px
      margin-top: 15px
      @media $mobile
        margin-top: 10px
      label
        display: inline-block
        border: 1px solid #eee
      input
        font-size: 16px
        height: 35px
        line-height: 35px
        padding: 0 8px
        width: 210px
        border: 0
        color: $gray_40
        outline: none
        @media $mobile
          width: 149px
          line-height: 18px
          font-size: 14px
      .prompt-error
        border: 1px solid $red_60
        border-radius: 0
      .prompt-tip
        margin: 5px auto
        text-align: left
        line-height: 20px
        width: 210px
        font-size: 14px
        color: #ef5350
        @media $mobile
          width: 150px
          font-size: 12px
          margin-top: 2px
          line-height: 12px
    .btn-primary
      margin: 10px auto 0
      height: 35px
      width: 210px
      border: 0
      @media $mobile
        margin: 10px auto 2px
        width: 150px
