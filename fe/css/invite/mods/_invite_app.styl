.invite-app-wrapper
  .invite-hd
    padding: 20px
    background-color: #fff
    background-image: linear-gradient(rgba(195,195,195,.05) 50%, transparent 50%, transparent)
    background-size: 70px 70px
    >p
      line-height: 1.8
      color: #6A6A6A
    h3
      font-size: 16px
      margin: 20px 0 15px
      color: #6A6A6A
  .invite-info
    max-width: 400px
    margin: 0 auto
  .invite-circle
    width: 62%
    height: 0
    margin: 0 auto
    border-radius: 50%
    padding-bottom: 62%
    background-color: rgba(97,146,179,.7)
    position: relative
    box-shadow:  inset 0px 0px 0px 5px #fff,0px 0px 0px 3px rgba(97,146,179,.7);
    img
      width: 70%
      margin-top: 30%
    h5
      border-top: 1px solid $gray_30
      opacity: .65
      width: 80%
      margin: 15% auto 7%
      span
        background-color: #90B2C9
        padding: 0 10px
        position: relative
        top: -7px
    p
      em
        font-size: 30px
  .btn-invite
    border: 1px solid #9B9B9B
    color: #6A6A6A
    margin: 20px 0 20px
    width: 70%
    padding-top: 3px
    padding-bottom: 3px

  .invite-list
    border-top: 8px solid #f5f5f5
    padding-bottom: 0
    h4
      span
        padding: 0 5px 3px 5px
        border-bottom: 4px solid $gray_60
        position: relative
        &:before
          width: 100%
          height: 1px
          content: ''
          position: absolute
          background-color: $gray_60
          bottom: -7px
          left: 0
    .tips
      padding: 30px 0 20px
      color: #9b9b9b
    ul
      margin-top: 30px
      li
        color: #9B9B9B
        border-bottom: 1px solid $gray_30
        padding: 15px 0
        &:last-child
          border-bottom: none
        em
          float: right
