.invite-older-wrapper
  .older-tips
    position: relative
    height: 600px
    @media $mobile
      height: auto
    .hd
      width: 400px
      margin: 80px auto 60px
      padding-left: 50px
      @media $mobile
        width: 100%
        margin: 22px auto
        padding-left: 0
        padding-top: 120px
    .title
      font-size: 20px
      line-height: 20px

    .bd
      width: 420px
      margin: 0 auto
      padding-left: 50px
      @media $mobile
        padding-left: 0
        width: 100%
    .tips-list
      .tip
        line-height: 30px
        font-size: 14px
        list-style-type: disc
        list-style-position: inside
        padding-left: 3px
        &:last-child
          list-style-type: none
          padding-left: 15px
      strong
        color: $strong_color
    .btn-view-detail
      margin-top: 30px
      border: 0
      width: 288px
      @media $mobile
        width: 100%
        height: 34px
        margin-bottom: 60px

    .ft
      position: absolute
      left: 120px
      top: 50%
      margin-top: -62px
      @media $mobile
        top: 80px
        left: 50%
        margin-left: -62px
      img
        height: 125px

.gm-account
  .bd
    padding-bottom: 20px
  .split-line,
  .btn-register
    display: none
