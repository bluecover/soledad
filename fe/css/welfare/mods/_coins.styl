.cash-record-wrapper
  .btn-all
    margin-top: 40px
    background-color: $gray_10
    padding: 3px 30px
    border: 1px solid $gray_30
    transition: all ease .3s
    &:hover
      background-color: #FFF
      transition: all ease .3s
    @media $mobile
      margin-top: 20px
      width: 100%
  .record-wrapper
    .icon-search
      width: 50px
      height: 50px
      margin-bottom: 10px
      margin-top: 15px
    .record-text
      color: $gray_40
  .mod-record-wrapper
    tr
      cursor: default
    td
      text-align: center
