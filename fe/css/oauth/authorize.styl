@import '../core/_global.styl'

.oauth-wrapper
  .title-wrapper
    padding-bottom: 20px
    border-bottom: 1px dotted $border_color
    margin-bottom: 20px
    .title
      color: #111
      font-size: 18px
      margin-right: 5px
      line-height: 1.5
      @media $mobile
        display: block

  .agreement-wrapper
    padding-bottom: 20px
    strong
      font-weight: bold
    p
      padding: 1em 0
    ul.scopes li
      list-style: circle inside
      padding-left: 1em

  .form-wrapper
    .btn-wrapper
      text-align: center
      .btn-authorize
        margin-right: 50px
        @media $mobile
          margin-right: 20px
