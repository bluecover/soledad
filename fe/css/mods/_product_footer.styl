@import 'jeet'

.product-footer-wrapper
  background-color: $gray_10
  padding: 40px 80px
  margin-bottom: 0
  clearfix()
  @media $mobile
    padding: 30px 0
    text-align: center
    a
      color: #444
      padding: 0 10px
    .wechat-con
      margin-top: 20px
      padding-top: 20px
      border-top: 1px dotted $gray_30
      line-height: 2
      font-size: 12px

  .savings-logo
    width: 85px
    margin: 0 auto
    display: block
    margin-bottom: 20px
  .childins-logo
    width: 120px
    margin: 0 auto
    display: block
    margin-bottom: 20px
  .fund-logo
    width: 85px
    margin: 0 auto
    display: block
    margin-bottom: 20px
  .wallet-logo
    width: 85px
    margin: 0 auto
    display: block
    margin-bottom: 20px

  .info-con
    .item
      span(1/5)
      line-height: 1.6
      a
        color: $gray_60
        font-size: 12px
        display: block
        margin: 5px 0
        &:hover
          color: #000
      .title
        display: block
        margin-bottom: 10px
        font-size: 14px
        color: $gray_80

    .code-con
      span(2/5)
      border-left: 1px solid #ddd
      padding-left: 55px
      line-height: 1.6