.bankcard-wrapper
  clearfix()
  max-width: 600px
  .item
    display: block
    width: 100%
    padding: 12px 10px
    border: 4px solid #fff
    border-bottom: 2px solid #ccc
    position: relative
    color: $gray_lighter
    height: 60px
    cursor: pointer
    .img-con
      height: 100%
      margin-right: 8px
      vertical-align: middle
      display: inline-block
      padding-top: 6px
      img
        width: 18px
    .bank-info
      display: inline-block
      vertical-align: middle
    .meta-data
      font-size: 12px
      margin-top: 5px
      color: $gray_lighter
    .options
      display: inline-block
      position: absolute
      right: 10px
      top: 50%
      margin-top: -6px
  .valid
    color: $gray
    &:hover
      border: 4px solid #cad6ef
      padding-bottom: 10px
      @media $mobile
        border: 4px solid #fff
        border-bottom: 2px solid #ccc
        padding-bottom: 12px
    &.checked
      border: 4px solid #85a1d4
      padding-bottom: 10px
    .meta-data
      color: $gray_light
  .btn-add-card
    padding: 20px 20px 20px 15px
    display: block

.card-form-wrapper
  .item
    @media $mobile
      line-height: 20px
      padding: 0
  .bank-tips
    font-size: 12px
    text-align: center
    background: #f5f5f5
    line-height: 1.6
    padding: 5px
