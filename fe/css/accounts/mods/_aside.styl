.accounts-aside-wrapper
  .accounts-aside
    float: left
    padding-left: 50px
    width: 350px
    font-size: 14px
    line-height: 30px
    color: #222
    @media $mobile
      width: 100%
      padding: 0 10%

    h3
      font-size: 18px
      line-height: 30px
      padding: 10px 0

    ul
      color: #444
      list-style-type: square
      padding-left: 15px
      font-size: 14px
      line-height: 30px

  .login-aside
    @media $mobile
      text-align: center
      p
        display:inline-block
      a
        display:inline-block

  .register-aside
    @media $mobile
      p
        display:inline-block