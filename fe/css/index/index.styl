@import '../plugin/fullpage.css'
@import '../plugin/animate.css'

@import '../core/_global.styl'

$desc_text_color = $gray_50
$header_height = 62px
$screen_768 = 'screen and (min-width: 768px) and (max-width: 1100px)'
$screen_height_low = 'screen and (max-height: 500px)'
$screen_height_middle = 'screen and (max-height: 650px)'

.index-html-wrapper,
.index-body-wrapper
  height: 100%
  overflow: hidden

.index-body-wrapper
  .set-scrolling-speed
    transition: all 1s ease !important
  .section-leave-animation
    .section-1
      opacity: .5
      transition: opacity 1s ease
      .section-wrap >.hd,
      .subtitle,
      .m-plan-form
        animation-name: sectionZoomOut
        animation-duration: 1s

  @import './mods/_header.styl'

@keyframes sectionZoomOut
  0%
    transform: scaleX(1) scaleY(1)
  50%
    transform: scaleX(.8) scaleY(.8)
  100%
    transform: scaleX(.3) scaleY(.3)

.index-wrapper
  .wow
    visibility: hidden
  line-height: 1
  button
    border: 0
    margin: 0

  // common section
  .section
    position: relative
    display: table
    table-layout: fixed
    width: 100%
    height: 100%
    padding-top: $header_height
    background-color: #fff
    @media $mobile
      padding-top: 0
  .section-wrap
    overflow: hidden
    display: table-cell
    vertical-align: middle
    text-align: center
    @media $mobile
      display: block
      padding: 40px 15px 0 15px
    >.hd
      @media $mobile
        margin: 20px auto 16px auto
        margin-top: 5vh
      .title
        color: $fancy_gray_90
        font-size: 30px
        font-weight: bold
        margin-bottom: 30px
        @media $mobile
          margin-bottom: 0px
    >.bd
      @media $mobile
        max-width: 400px
        margin: 0 auto
      .desc
        line-height: 1.6
        color: $desc_text_color
      .subtitle
        color: $fancy_gray_90
        font-size: 14px
        margin-bottom: 10px
    >.ft
      position: absolute
      bottom: 30px
      left: 0
      right: 0
      width: 18px
      margin: 0 auto
      @media $mobile
        bottom: 15px
        width: 12px
    .anchor-next
      .svgicon
        display: block
        width: 18px
        height: (18/12)*7 px
        @media $mobile
          width: 12px
          height: 7px
          &:last-child
            opacity: .4
        path
          fill: $gray_30
      &:hover
        .svgicon
          opacity: .7

  // common selection form
  .m-plan-form
    font-size: 0
    .btn
      margin: 0
      line-height: 40px
      height: 40px
  .m-select
    display: inline-block
    position: relative
    margin-right: 6px
    &:after
      position: absolute
      display: inline-block
      z-index: 0
      left: 0
      content: ''
      width: 160px
      height: 30px
    >.hd
        line-height: 40px
        height: 40px
      .btn
        width: 160px
        font-size: 0
        line-height: 40px
        height: 40px
        cursor: default
        background-color: #fff
        outline: 0
        text-align: left
        color: $fancy_gray_90
      .btn-value
        font-size: 14px
        .svgicon
          margin: 10px 5px 0 0
          vertical-align: top
          width: 20px
          height: 20px
      .btn-value.default
        color: $gray_50
      .prefix
        margin-right: 10px
        font-size: 18px
      .caret
        triangle(4px, top, $gray_50)
        position: absolute
        right: 20px
        top: 18px
    >.bd
      display: none
      .dropdown
        top: 100%
        left: 0
        min-width: 100%
        text-align: left
        color: $gray_70
        @extend $dropdown
        >li
          line-height: 50px
          height: 50px
          border-bottom: 1px dotted $gray_20
          &:last-child
            border-bottom: 0
      .option
        padding-left: 18px
        cursor: pointer
        display: block
        color: $gray_50
        font-size: 14px
        &:hover
          color: $brand_blue
          background: $gray_10
        .svgicon
          margin: 14px 5px 0 0
          vertical-align: top
          width: 20px
          height: 20px
          path
            fill: $gray_30

  // common slide mod
  .m-slides
    position: relative
    .btn-prev,
    .btn-next
      position: absolute
      z-index: 2
      top: 40%
      color: $brand_blue
      width: 30px
      height: 30px
      padding-top: 8px
      @media $mobile
        top: 25%
    .btn-prev
      left: 0
    .btn-next
      right: 0
    .btn-prev.disable,
    .btn-next.disable
      color: $gray_30

  // common service mod
  .m-plan-service
    text-align: center
  .m-service
    display: inline-block
    vertical-align: top
    width: 230px
    margin: 0 1%
    @media $screen_768
      width: 45%
    line-height: 1
    .logo-wrap
      width: 100px
      height: 100px
      border-radius: 50%
      background: $brand_blue
      text-align: center
      line-height: 100px
      margin-bottom: 40px
      @media $screen_768
        margin-bottom: 20px
    .svgicon
      display: inline-block
      width: 50px
      height: 50px
      vertical-align: middle
    .title
      color: $fancy_gray_90
      font-size: 18px
    >.hd
      width: 100px
      margin: 70px auto 26px auto
      @media $screen_768
        margin: 30px auto 16px auto
    >.bd
      text-align: left
      @media $screen_768
        max-width: 300px
        margin: 0 auto
      .desc
        color: $fancy_gray_30
        line-height: 1.8

  // common product introduction mod
  .m-product-intro
    background-color: #fff
    padding: 30px 0 43px 0
    height: 390px
    width: 336px
    display: inline-block
    margin: 20px 52px 0 0
    &:last-child
      margin-right: 0
    >.hd
      margin-bottom: 12px
      .svgicon
        width: 120px
        height: 36px
    >.bd
      .subtitle
        font-size: 18px
        margin-bottom: 0
      .desc
        color: $fancy_gray_30
      .svgicon
        width: 60px
        height: 56px
        margin: 18px 0 10px 0
      li
        width: 226px
        padding: 12px 30px
        margin: 0 auto
        border-bottom: 1px solid $gray_20
        &:last-child
          border-bottom: none
        @media $screen_height_low
          padding: 6px 30px
      .btn-plan
        margin-top: 15px

  @import './mods/_section_1.styl'
  @import './mods/_section_2.styl'
  @import './mods/_section_3.styl'
  @import './mods/_section_4.styl'
  @import './mods/_section_5.styl'
  @import './mods/_section_6.styl'
  @import './mods/_section_7_8.styl'

#fullpage
  height: 100%

#section_menu
  position: fixed
  right: 50px
  top: 0
  bottom: 0
  height: 200px
  width: 20px
  margin: auto 0
  @media $screen_768
    right: 20px
  .circle
    display: block
    width: 12px
    height: 12px
    border-radius: 50%
    border: 1px solid $gray_30
    margin-bottom: 10px
  .active
    .circle
      background-color: $brand_blue
      border: 1px solid $brand_blue
