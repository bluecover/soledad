@import './_animate_prize.styl'

.lottery-index-body
  background-color: #FFF

.lottery-index-wrapper
  .lottery-wrapper
    width: 100%
    max-width: 768px
    height: 100%
    margin: 0 auto
    clearfix()
    position: relative
    background-color: #fff
    overflow: hidden
    &.mask
      &:after
        content: ''
        width: 100%
        padding-bottom: 200%
        position: absolute
        top: 0
        left: 0
        background-color: black
        opacity:.6
        z-index: 1
    table
      width: 100%

    .lottery-item
      width: 20%
      padding-top: 20%
      background-color: red
      position: relative
      &.active
        opacity: 1
        z-index: 2
      &.silver
        background-color: #1EB1FC
        &:before
          background-color: #23CFFD
      &.cup
        background-color: #FDB12B
        &:before
          background-color: #FEC82E
      &.kindle,
      &.pig
        background-color: #FC4E43
        &:before
          background-color: #FD6B57
      &.kindle
        img
          width: 90%
      &.pig
        img
          width: 70%
      &.wallet
        background-color: #437DFB
        &:before
          background-color: #3D93FC
      &.leaf
        background-color: #2BD368
        &:before
          background-color: #2BEF56
        img
          width: 65%
      &.gold
        background-color: #A772DA
        &:before
          background-color: #C870FC
      &:before
        content: ''
        width: 80%
        padding-top: 80%
        left: 10%
        top: 10%
        border-radius: 10px
        position: absolute
      img
        width: 60%
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%,-50%)
    .banner-img
      width: 100%
      margin-top: 10px
    .lottery-main
      vertical-align: top
      position: relative
      > *
        padding: 0 5px
      h5
        margin: 5px 0
      > p
        line-height: 1.7
        font-size: 12px
        color: $gray_50
        &:before
          content: 'Â·'
          position: relative
          left: 3px
          diplay: inline
          padding-right: 5px
          font-size: 14px
    .prize-box
      position: relative
      img
        width: 25%
        position: absolute
        bottom: 12em
        left: 50%
        margin-left: -12.5%
        z-index: 2
        &.active
          animation-name: bounceInZoomOut
          animation-fill-mode: both
          animation-duration: 2s
      p
        color: #fff
        position: absolute
        font-size: 16px
        bottom: 0
        left: 50%
        transform: translateX(-50%)
        z-index: 2
        &.active
          animation: bounceUpZoomOut 2s cubic-bezier(0.215, 0.610, 0.355, 1.000) 0s forwards
    .btn-start
      width: 127px
      height:  56px
      color: #fff
      text-align: center
      padding-top: 8px
      cursor: pointer
      position: absolute
      bottom: 10px
      left: 50%
      margin-left: -63px
      p
        margin-bottom: 3px
        font-size: 20px
      span
        font-size: 12px
      &.before
        background: url('{{{img/activity/lottery/btn_before.png}}}') no-repeat
        background-size: 100%
