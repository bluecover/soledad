.beauty38-register-wrapper
  .banner
    background-color: #fff7a9
    height: 88px
    overflow: hidden
    padding: 0 10px
    color: #F37E80
    margin-bottom: 15px
    display: block
    @media $mobile
      height: 176px
      text-align: center
    img
      width: 23%
      float: left
      margin-right: 20px
      @media $mobile
       float: none
       width: 250px
    span
      line-height: 88px
      font-size: 38px
      @media $mobile
        margin-top: 15px
        line-height: 30px
        font-size: 24px
        display: block
  .accounts-content
    width: 1100px
    height: 600px
    margin: 40px auto
    background-color: #fff
    @media $mobile
      width: 100%
      height: auto
      margin-top: 0

  .gm-account
    display: block
    .m-account-form
      margin: 50px auto
      @media $mobile
        padding: 20px
        margin: 0 auto
    .split-line,
    .hd,
    .ft,
    .btn-login
      display: none
