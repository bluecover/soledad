.beauty38-index-body
  background-color: #fff7a9

.beauty38-index-wrapper
  padding: 20px
  .banner
    margin-top: 30px
    color: #f37e80
    h2
      font-size: 40px
      font-size: 14vw
      margin-bottom: 20px
    p
      font-size: 22px
      font-size: 7vw
    img
      width: 100%
      margin-top: 30px
  .phone-form
    position: relative
    z-index: 10
    font-size: 16px
    margin-top: 15px
    @media $mobile
      margin-top: 10px
    label
      display: inline-block
      border: 1px solid #eee
    input
      font-size: 16px
      height: 35px
      line-height: 35px
      padding: 0 8px
      width: 100%
      border: 0
      outline: none
      @media $mobile
        width: 100%
        line-height: 18px
        font-size: 14px
    .prompt-error
      border: 1px solid $red_60
      border-radius: 0
    .prompt-tip
      margin: 5px auto
      text-align: left
      line-height: 20px
      width: 100%
      font-size: 14px
      color: #ef5350
      @media $mobile
        width: 100%
        font-size: 12px
        margin-top: 2px
        line-height: 12px
  .btn-primary
    margin: 10px auto 0
    height: 35px
    width: 100%
    border: 0
    @media $mobile
      margin: 10px auto 2px
      width: 100%
  .rules
    margin-top: 20px
    p
      line-height: 1.5
      margin-bottom: 5px

